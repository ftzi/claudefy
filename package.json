{
  "name": "ai-tao",
  "version": "0.2.0",
  "description": "Setup and maintain CLAUDE.md files for your projects",
  "type": "module",
  "bin": {
    "ai-tao": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "ok": "bun test && bun run build",
    "prepublishOnly": "bun run build",
    "prepare": "husky",
    "pre-commit": "bun ok"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "documentation",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.2.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ftzi/ai-tao.git"
  }
}
